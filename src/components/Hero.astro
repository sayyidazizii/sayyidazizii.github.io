---
const personalImageAlt = "Sayyid Aziz";
import Badge from "@/components/Badge.astro";
import LinkedInIcon from "@/components/icons/LinkedIn.astro";
import MailIcon from "@/components/icons/Mail.astro";
import SocialPill from "@/components/SocialPill.astro";
import Instagram from "./icons/Instagram.astro";
import GitHub from "@/components/icons/GitHub.astro";
import CakeResume from "@/components/icons/CakeResume.astro";
---

<style>
@keyframes wave {
  0% { transform: rotate(0deg); }
  10% { transform: rotate(14deg); }
  20% { transform: rotate(-8deg); }
  30% { transform: rotate(14deg); }
  40% { transform: rotate(-4deg); }
  50% { transform: rotate(10deg); }
  60% { transform: rotate(0deg); }
  100% { transform: rotate(0deg); }
}

.wave {
  display: inline-block;
  transform-origin: 70% 70%;
  animation: wave 2s infinite;
}

.icon-button {
  @apply w-12 h-12 flex items-center justify-center rounded-full border border-gray-300 dark:border-gray-600 transition hover:bg-gray-100 dark:hover:bg-gray-700;
  position: relative;
}

.icon-button:hover .tooltip {
  opacity: 1;
  transform: translateY(0);
  pointer-events: auto;
}

.tooltip {
  @apply absolute bg-black text-white text-xs rounded px-2 py-1 transition-opacity duration-200;
  bottom: -30px;
  left: 50%;
  transform: translateX(-50%) translateY(10px);
  opacity: 0;
  pointer-events: none;
  white-space: nowrap;
}
</style>

<div class="max-w-xl mx-auto text-center">
  <div class="flex justify-center gap-4 mb-4">
    <img
      class="rounded-full shadow-lg size-16"
      src="/profile.jpeg"
      alt={personalImageAlt}
    />
    <a
      href="https://www.linkedin.com/in/sayyidazizii/"
      target="_blank"
      rel="noopener"
      class="flex items-center transition md:justify-center md:hover:scale-105"
    >
      <Badge>Student & Programmer</Badge>
    </a>
  </div>

  <h1 class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white">
    Hallo Everyone <span class="wave">ðŸ‘‹</span> <br> Reach me here
  </h1>

  <div class="mt-8 flex justify-center gap-6 flex-wrap">
    <a href="https://www.instagram.com/sayyidazizii" class="icon-button" target="_blank" rel="noopener">
      <Instagram class="size-5" />
      <span class="tooltip">Instagram</span>
    </a>
    <a href="https://www.linkedin.com/in/sayyidazizii/" class="icon-button" target="_blank" rel="noopener">
      <LinkedInIcon class="size-5" />
      <span class="tooltip">LinkedIn</span>
    </a>
    <a href="https://github.com/sayyidazizii/" class="icon-button" target="_blank" rel="noopener">
      <GitHub class="size-5" />
      <span class="tooltip">GitHub</span>
    </a>
    <a href="https://drive.google.com/file/d/1gogxCU6W5UuYK_Hkzh2TQPTaoogfa4Ix/view?usp=sharing" class="icon-button" target="_blank" rel="noopener">
      <CakeResume class="size-5" />
      <span class="tooltip">CV</span>
    </a>
  </div>
</div>
