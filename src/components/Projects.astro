---
import GitHub from "./icons/GitHub.astro"
import NextJS from "./icons/NextJS.astro"
import Tailwind from "./icons/Tailwind.astro"
import Link from "./icons/Link.astro"
import LinkButton from "./LinkButton.astro"
import Vite from "./icons/Vite.astro"  // Import the Vite icon
import Laravel from "./icons/Laravel.astro"
import ReactJS from "./icons/React.astro"
import CodeIgniter from "./icons/CodeIgniter.astro"

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  VITE: {
    name: "Vite.js",
    class: "bg-[#646CFF] text-white",
    icon: Vite,
  },
  LARAVEL: {
    name: "Laravel",
    class: "bg-[#FF6969] text-white",
    icon: Laravel,
  },
  REACT: {
    name: "React.js",
    class: "bg-[#1A2130] text-white",
    icon: ReactJS,
  },
  CODEIGNITER: {
    name: "CodeIgniter",
    class: "bg-[#1A2130] text-white",
    icon: CodeIgniter,
  }
}

const PROJECTS = [
  {
    title: "Cooperative Management System",
    description: "A web-based solution to manage and track the operations of a cooperative, including member contributions, financial reports, and transaction history. Built using modern tech stack for fast and reliable performance.",
    github: "https://github.com/sayyidazizii/ciptaberkahsinergi",
    image: "/projects/p1.png",
    tags: [TAGS.VITE, TAGS.REACT, TAGS.LARAVEL],
  },
  {
    title: "Accounting Information System Farm",
    description: "An integrated system to track farm-related financial data, helping farmers manage their expenses, incomes, and overall profitability. Designed for ease of use and efficient data entry.",
    github: "https://github.com/ciptasolutindo/actions-farm-mse",
    image: "/projects/p2.png",
    tags: [TAGS.VITE, TAGS.LARAVEL],
  },
  {
    title: "Cashier System",
    description: "A simple yet powerful cashier management system for retail environments, enabling smooth transaction processing, real-time inventory updates, and fast billing. Easy to integrate with various POS hardware.",
    github: "https://github.com/sayyidazizii/POS-Filament",
    image: "/projects/p3.png",
    tags: [TAGS.LARAVEL],
  },
  {
    title: "Integrated Services Post System",
    description: "An all-in-one platform designed to handle postal services, including parcel tracking, delivery scheduling, and customer interaction. Helps improve efficiency for post offices and delivery companies.",
    github: "https://github.com/sayyidazizii/POS-Filament",
    image: "/projects/p4.png",
    tags: [TAGS.LARAVEL],
  },
]

---

<style>
  .gradient-border {
    position: relative;
    border-radius: 12px;
    overflow: hidden;
  }

  .gradient-border::before {
    content: "";
    position: absolute;
    inset: 0;
    padding: 3px; /* Ketebalan border */
    border-radius: 12px;
    background: linear-gradient(45deg, #ff6b6b, #6b5bff, #1abc9c);
    -webkit-mask: 
      linear-gradient(#fff 0 0) content-box, 
      linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
  }

  /* Hover effect */
  .gradient-border:hover::before {
    background: linear-gradient(135deg, #ff8c00, #ff0080, #8a2be2);
  }
</style>

<div class="max-w-screen-xl mx-auto grid grid-cols-1 sm:grid-cols-2 gap-8">
  {
    PROJECTS.map(({ image, title, description, tags, github }) => (
      <div class="relative bg-white dark:bg-gray-800 rounded-xl shadow-lg overflow-hidden group transform transition duration-300 hover:scale-105 hover:shadow-2xl gradient-border">
        <div class="w-full h-56 bg-cover bg-center transition-all duration-500 transform group-hover:scale-105" style={`background-image: url(${image})`}></div>
        <div class="p-6 relative">
          <h3 class="text-xl font-semibold text-gray-800 dark:text-gray-100 mb-2">{title}</h3>
          <div class="flex flex-wrap gap-2 mb-4">
            {tags.map((tag) => (
              <span class={`flex items-center gap-x-2 rounded-full text-xs ${tag.class} py-1 px-3`}>
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            ))}
          </div>
          <div class="mt-2 text-gray-700 dark:text-gray-400 mb-4">
            {description || "No description available."}
          </div>
          <div class="flex justify-between items-center">
            {github && (
              <a href={github} class="text-sm font-medium text-blue-600 hover:text-blue-800 flex items-center gap-x-1">
                <GitHub class="size-5" />
                GitHub
              </a>
            )}
          </div>
        </div>
      </div>
    ))
  }
</div>
